package BAModel;

import java.util.ArrayList;

public class NodeManage {

	double x,y;
	double distance;
	int len;
	ArrayList<Node> allNode;
	
	public NodeManage() {
		allNode = new ArrayList<>();
		x = 0;
		y = 10;
		distance = 10;
		len = 0;
	}
	
	public void createNode() {
		if(x < len * distance) {
			x = x + distance;
		} else {
			len++;
			y = y + distance;
		}
		allNode.add(new Node(x, y));
	}
	
	private void init() {
		for(int i = 0; i < 4; i++) {
			createNode();
		}
	}
	
}
