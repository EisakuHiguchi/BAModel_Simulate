package DataPlot;

import java.awt.Color;
import java.awt.Graphics2D;
import java.awt.geom.Line2D;
import java.util.ArrayList;

import javax.swing.JFrame;
import javax.swing.JLabel;

import BAModel.BAModel_Node;


public class DataPlot extends JFrame {	

	/**
	 * 
	 */
	private static final long serialVersionUID = 1L;

	ArrayList<BAModel_Node> allNode;
	
	public DataPlot(){
		setTitle("DataPlot");
		setSize(800, 800);
	}
	
	public void setBANode(BAModel_Node n) {
		allNode = n.getNode();
		setBANode(xy[0], xy[1]);
	}
	
	public void setBANode(double x,double y) {
		JLabel p = new JLabel();
		p.setForeground(Color.BLACK);
		p.setText("Åú");
		p.setLocation((int)x, (int)y);
		
		Graphics2D g2 = (Graphics2D)this.getGraphics();
		g2.setColor(Color.BLACK);
		
		Line2D line;
		for(BAModel_Node e: allNode) {
			double[] loc = e.getPoint();
			line = new Line2D.Double(x, loc[0], y, loc[1]);
			g2.draw(line);
		}
		
		
	}

}
