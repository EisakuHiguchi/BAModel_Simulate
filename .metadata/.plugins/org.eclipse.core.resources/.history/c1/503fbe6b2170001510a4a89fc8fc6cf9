package DataPlot;

import java.awt.Color;
import java.awt.Graphics2D;
import java.awt.geom.Line2D;
import java.util.ArrayList;

import javax.swing.JFrame;
import javax.swing.JLabel;

import BAModel.BA_Node;


public class DataPlot extends JFrame {	

	/**
	 * 
	 */
	private static final long serialVersionUID = 1L;
	
	public DataPlot(){
		setTitle("DataPlot");
		setSize(800, 800);
	}
	
	public void drawBANode(ArrayList<BA_Node> n) {
		for(BA_Node e: n) {
			drawBANode(e);
		}
	}
	
	public void drawBANode(BA_Node n) {
		ArrayList<BA_Node> allNode = n.getNode();
		JLabel p = new JLabel();
		double[] np = n.getPoint();
		
		p.setForeground(Color.BLACK);
		p.setText("Åú");
		p.setLocation((int)np[0], (int)np[1]);
		
		Graphics2D g2 = (Graphics2D)this.getGraphics();
		g2.setColor(Color.BLACK);
		
		Line2D line;
		for(BA_Node e: allNode) {
			double[] loc = e.getPoint();
			line = new Line2D.Double(np[0], loc[0], np[1], loc[1]);
			g2.draw(line);
		}
	}

}
