package DataPlot;

import java.awt.BasicStroke;
import java.awt.Color;
import java.awt.Graphics;
import java.awt.Graphics2D;
import java.util.ArrayList;

import javax.swing.JFrame;
import javax.swing.JLabel;

import BAModel.BA_Node;


public class DataPlot extends JFrame {	

	/**
	 * 
	 */
	private static final long serialVersionUID = 1L;
	BA_Node n;
	
	public DataPlot(){
		setTitle("DataPlot");
		setSize(800, 800);
	}
	
	@Override
	public void paint(Graphics g) {
		if(n != null) {
			ArrayList<BA_Node> allNode = n.getNode();
			JLabel p = new JLabel();
			double[] np = n.getPoint();

			p.setForeground(Color.BLACK);
			p.setText("Åú");
			p.setLocation((int)np[0], (int)np[1]);

			Graphics2D g2 = (Graphics2D)g.create();
			g2.setStroke(new BasicStroke(3f));
			g2.setPaint(Color.black);			
			
			for(BA_Node e: allNode) {
				double[] loc = e.getPoint();
				g2.drawLine((int)np[0], (int)np[1], (int)loc[0], (int)loc[1]);
				g2.dispose();
			}
		}
	}
	
	public void drawBANode(ArrayList<BA_Node> n) {
		for(BA_Node e: n) drawBANode(e);
	}
	
	public void drawBANode(BA_Node n) {
		this.n = n;
		repaint();
	}

}
